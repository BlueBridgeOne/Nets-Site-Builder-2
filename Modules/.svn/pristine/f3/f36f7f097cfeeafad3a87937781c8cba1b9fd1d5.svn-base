// Breadcrumb
// 
// Markup:
// <div class="breadcrumb">
// 	<ul>
// 		<li class="breadcrumb-item"><a href="#">Home</a></li> <span class="breadcrumb-divider">/</span>
// 		<li class="breadcrumb-item"><a href="#">Category</a></li> <span class="breadcrumb-divider">/</span>
// 		<li class="breadcrumb-item">Item</li>
// 	</ul>
// </div>
// 
// Styleguide 11.10

.breadcrumb{
	
	display:none;
text-transform:uppercase;
	@media(min-width: $screen-md-min){
		clear:both;
		margin-bottom: $sc-large-margin;
		display:block;
	}
}

.breadcrumb-divider{
	display:inline;
	color:#CCC;
}

.breadcrumb-item{
	display:inline;
}
.breadcrumb-item:hover{
	text-decoration:underline;
}
.breadcrumb-item-active{
	@extend .breadcrumb-item;
	color: $sc-color-primary;
}

.breadcrumb-divider-icon {
	@extend .icon-angle-right;
	font-size: $sc-base-font-size;
}